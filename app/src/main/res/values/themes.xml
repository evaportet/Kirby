<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kirby" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/pinkDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/Kirby.Bottombar</item>
        <item name="fontFamily">?attr/fontFamily</item>

    </style>
    <style name="Kirby.Bottombar" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- BottomBar Colors. -->
        <item name="itemIconTint">@color/selectables_button_colors</item>
        <item name="itemTextColor">@color/selectables_button_colors</item>
    </style>

    <style name="Kirby.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">?attr/fontFamily</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="circularimage">
        <item name="cornerSize">50%</item>
    </style>
</resources>